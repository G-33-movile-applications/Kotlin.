<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.mymeds">
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyMeds">

        <!-- LoginActivity serÃ¡ la primera pantalla -->
        <activity
            android:name=".views.LoginActivity"
            android:exported="true"
            android:theme="@style/Theme.MyMeds">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Pantalla de registro -->
        <activity
            android:name=".views.RegisterActivity"
            android:exported="true"
            android:theme="@style/Theme.MyMeds" />

        <!-- Pantalla principal despuÃ©s del login -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.MyMeds" />

        <!-- ðŸ”‘ Pantalla de recuperaciÃ³n de contraseÃ±a -->
        <activity
            android:name=".views.PasswordResetActivity"
            android:exported="true"
            android:theme="@style/Theme.MyMeds" />

        <!-- Pantalla de perfil -->
        <activity
            android:name=".views.ProfileActivity"
            android:exported="true"
            android:theme="@style/Theme.MyMeds" />
    </application>
</manifest>
